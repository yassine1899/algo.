ALGORITHM first
VAR
   nbc,nbv,nbw,i : INTEGER :=0
   p : STRING
BEGIN
 Write("give phrase")
 Read(p)
WHILE (p[i]<>".") DO
    nbc :=nbc+1
    IF (p[i]="a" OR p[i]="e" OR p[i]="i" OR p[i]="u" OR p[i]="o" OR P[I]="A" OR P[I]="E" OR P[I]="I" OR P[I]="U" OR P[I]="O" ) THEN
       nbv:=nbv+1
    END_IF
    IF (p[i]=" ") THEN
        nbw:=nbw+1
    END_IF
    i:=i+1
END_WHILE
 Write("number of caractaire :", nbc)
 Write("number of words :" , nbw)
 Write("number of vowels:",)

END